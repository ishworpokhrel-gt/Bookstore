@model Category

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-10 text-center m-5" style="color:indianred">
                <h1>Delete Category</h1>

            </div>

        </div>
        <div class="mb-2">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />
        </div>
        <div>
            <label asp-for="OrderBy"></label>
            <input disabled asp-for="OrderBy" class="form-control" />
        </div>
        <div class="row m-4">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>

        </div>
    </div>
</form>